<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.danlvse.weebo.ui.MessageActivity">

    <include layout="@layout/toolbar"></include>
    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/slide_strip"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        app:pstsIndicatorColor="@color/colorAccent"
        app:pstsShouldExpand="true"
        app:pstsIndicatorHeight="5dp"
        app:pstsDividerColor="@color/dividerColor"
        app:pstsUnderlineColor="@color/colorAccent">

    </com.astuetz.PagerSlidingTabStrip>
    <android.support.v4.view.ViewPager
        android:id="@+id/message_viewpager"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <android.support.v4.view.PagerTabStrip
            android:id="@+id/message_pager_strip"
            android:layout_width="match_parent"
            android:layout_height="0dp"></android.support.v4.view.PagerTabStrip>
    </android.support.v4.view.ViewPager>

