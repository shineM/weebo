<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/weibo_header_margin_left"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/weibo_avatar_margin_left"
            android:layout_marginTop="@dimen/weibo_avatar_margin_top"
            android:background="@drawable/avatar_background"
            android:src="@mipmap/owl" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/weibo_username_margin_left"
            android:layout_marginTop="@dimen/add_weibo_username_margin_top"
            android:text="@string/account_name"
            android:textColor="#000"
            android:textSize="@dimen/weibo_username_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/weibo_username_margin_left"
            android:layout_marginTop="@dimen/weibo_time_margin_top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/public_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/vector_drawable_ic_public_black___px"
                android:text="公开微博"
                android:textSize="@dimen/weibo_time_size" />

        </LinearLayout>

        <Button
            android:id="@+id/post_button"
            style="@style/button_unclickable"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:shadowRadius="0"
            android:shadowColor="#ffffff"
            android:text="@string/post_weibo">


        </Button>

    </RelativeLayout>

</LinearLayout>